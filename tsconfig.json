{
	"rules": {
		"no-var-requires": 0
	},
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"outDir": "./build",
		"baseUrl": "./src",
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": false,
		"target": "es2017",
		"paths": {
			"lib/*": [
				"./lib/*"
			],
			"modules/*": [
				"./modules/*"
			]
		}
	},
	"include": [
		"config/conifg.ts",
		"src/*.js",
		"src/*.ts",
		"src/**/*.js",
		"src/**/*.ts"
	]
}